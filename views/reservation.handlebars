<div class="container">
  {{#each fligth}}
  <div class="card text-center my-4">
    <div class="card-header">
      Booking Number: FWA-2018-{{booking_number}}
    </div>
    <div class="card-body">
      <h3 class="card-title">Passenger: {{first_name}} {{last_name}}</h3>
      <h5>Your Itinerary</h5>
      <p class="card-text"> FLIGHT #FA{{flight_id}}</p>
      <p class="card-text"> DEPARTS: {{depart_datetime}}</p>
      <p class="card-text"> AIRPORT: {{depart_airport}} {{depart_place}}</p>
      <br>
      <p class="card-text"> ARRIVES: {{return_date}}</p>
      <p class="card-text"> AIRPORT: {{arrival_airport}} {{arrive_place}}</p>
      <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
        <input type="hidden" name="cmd" value="_s-xclick">
        <input type="hidden" name="hosted_button_id" value="WKRMKS29PRM8J">
        <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
        <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
      </form>
    </div>
  </div>
  {{/each}}

</div>