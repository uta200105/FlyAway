  <script>
    $('.port-item').click(function () {
      $('.collapse').collapse('hide');
    });

    $('.sub-port-rt').click(function () {
      $('#round-trip').collapse('show');
      $('#one-way').collapse('hide');
      $('.sub-port-rt').removeClass('bg-white text-dark');
      $('.sub-port-rt').addClass('bg-dark text-white');
      $('.sub-port-ow').addClass('bg-white text-dark');
      $('.sub-port-ow').removeClass('bg-dark text-white');
    });

    $('.sub-port-ow').click(function () {
      $('#one-way').collapse('show');
      $('#round-trip').collapse('hide');
      $('.sub-port-ow').removeClass('bg-white text-dark');
      $('.sub-port-ow').addClass('bg-dark text-white');
      $('.sub-port-rt').addClass('bg-white text-dark');
      $('.sub-port-rt').removeClass('bg-dark text-white');
    })

    $(document).on('click', '[data-toggle="lightbox"]', function (event) {
      event.preventDefault();
      $(this).ekkoLightbox();
    });
  </script>
  <script>

    $('#carousel').on('slide.bs.carousel', function (e) {

      var $e = $(e.relatedTarget);
      var idx = $e.index();
      var itemsPerSlide = 4;
      var totalItems = $('.carousel-item').length;

      if (idx >= totalItems - (itemsPerSlide - 1)) {
        var it = itemsPerSlide - (totalItems - idx);
        for (var i = 0; i < it; i++) {
          // append slides to end
          if (e.direction == "left") {
            $('.carousel-item').eq(i).appendTo('.carousel-inner');
          }
          else {
            $('.carousel-item').eq(0).appendTo('.carousel-inner');
          }
        }
      }
    });
  </script>
